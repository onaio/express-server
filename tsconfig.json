{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "typeRoots": [
    "./src/types", // this is where you define your custom types
    "./node_modules/@types" //this where npm packages containing types are located
  ]
}
